{
  "name": "@vue-mini/repository",
  "private": true,
  "packageManager": "pnpm@9.14.2",
  "type": "module",
  "keywords": [
    "monorepo",
    "pnpm",
    "turborepo",
    "changesets",
    "vite",
    "vitest",
    "tsup",
    "esbuild"
  ],
  "license": "MIT",
  "author": "i7eo",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "simple-git-hooks",
    "dev": "turbo run dev --parallel --continue",
    "dev:document": "turbo run dev --filter=\"./apps/document\"",
    "build": "turbo run build",
    "build:packages": "turbo run build --filter=\"./packages/**\"",
    "test": "turbo run test",
    "clean": "run-s \"clean:**\"",
    "clean:workspace": "turbo run clean",
    "clean:workspace:cache": "turbo run clean:cache",
    "clean:root-cache": "rimraf .turbo && rimraf pnpm-lock.yaml && rimraf node_modules",
    "lint": "turbo run lint",
    "format": "turbo run lint:prettier",
    "commit": "czg"
  },
  "devDependencies": {
    "@manypkg/get-packages": "^1.1.3",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.10.1",
    "@unconfig/commitlint-config": "^0.1.10",
    "@unconfig/eslint-config": "^0.1.10",
    "@unconfig/lint-staged-config": "^0.1.10",
    "@unconfig/prettier-config": "^0.1.10",
    "@unconfig/simple-git-hooks-config": "^0.1.10",
    "@unconfig/stylelint-config": "^0.1.10",
    "@unconfig/ts-config": "^0.1.10",
    "@vitest/ui": "^2.1.6",
    "jsdom": "^25.0.1",
    "npm-run-all2": "^7.0.1",
    "rimraf": "^6.0.1",
    "tsx": "4.19.2",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2",
    "vitest": "^2.1.6"
  },
  "engines": {
    "node": ">=23",
    "pnpm": ">=9"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@algolia/client-search"
      ]
    },
    "allowedDeprecatedVersions": {
      "eslint": "*"
    }
  }
}
