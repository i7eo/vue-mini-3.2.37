{
  "extends": ["@unconfig/ts-config/web.json", "./tsconfig.paths.json"],
  "compilerOptions": {
    "outDir": "dist"
  },
  "include": [
    "./packages/**/*",
    "./packages/**/*.json",
    "./packages/**/typings/**/*"
  ],
  "exclude": [
    "**/__tests__/**/*",
    "**/tests/**/*",
    "node_modules",
    "**/dist",
    "**/*.md",
    "**/*.config.*"
  ]
}
